{
  "name": "ibm-openapi-validator",
  "description": "Configurable and extensible validator/linter for OpenAPI documents",
  "version": "0.1.2",
  "main": "src/lib/index.js",
  "repository": "https://github.com/IBM/openapi-validator",
  "license": "Apache-2.0",
  "scripts": {
    "prepush": "npm test",
    "link": "npm install -g",
    "unlink": "npm uninstall -g",
    "test": "npm run lint && npm run test-validators && npm run test-cli-tool",
    "test-validators": "mocha --recursive test/plugins",
    "test-cli-tool": "mocha test/cli-validator/tests",
    "lint": "eslint --cache --quiet --ext '.js' src test",
    "fix": "eslint --fix --ext '.js' src test"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "deepmerge": "^2.1.1",
    "find-up": "^3.0.0",
    "globby": "^8.0.1",
    "js-yaml": "^3.12.0",
    "json-dup-key-validator": "^1.0.2",
    "json-schema-ref-parser": "^5.1.3",
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.10",
    "matcher": "^1.1.1",
    "pad": "^2.2.1",
    "require-all": "^3.0.0",
    "semver": "^5.5.1",
    "yaml-js": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "expect": "^23.5.0",
    "husky": "^0.14.3",
    "intercept-stdout": "^0.1.2",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "strip-ansi": "^4.0.0"
  },
  "bin": {
    "lint-openapi": "src/cli-validator/index.js"
  },
  "engines": {
    "node": ">=8.9.0"
  }
}
