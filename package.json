{
  "name": "openapi-validator",
  "description": "Configurable and extensible validator/linter for OpenAPI documents",
  "version": "2.0.0",
  "main": "src/lib/index.js",
  "repository": "https://github.ibm.com/CloudEngineering/openapi-validator",
  "license": "Apache-2.0",
  "scripts": {
    "prepush": "npm test",
    "link": "npm i -g",
    "unlink": "npm uninstall -g",
    "test": "npm run lint && npm run test-validators && npm run test-cli-tool",
    "test-validators": "mocha --recursive test/plugins",
    "test-cli-tool": "mocha test/cli-validator/tests",
    "lint": "eslint --cache --quiet --ext '.js' src test"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "deepmerge": "^2.1.1",
    "find-up": "^2.1.0",
    "globby": "^7.1.1",
    "js-yaml": "^3.12.0",
    "json-dup-key-validator": "^1.0.2",
    "json-schema-ref-parser": "^5.0.3",
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.10",
    "matcher": "^1.1.1",
    "pad": "^2.1.0",
    "require-all": "^2.2.0",
    "semver": "^5.5.0",
    "yaml-js": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "expect": "^22.4.3",
    "husky": "^0.14.3",
    "intercept-stdout": "^0.1.2",
    "mocha": "^5.2.0",
    "prettier": "^1.13.4",
    "strip-ansi": "^4.0.0"
  },
  "bin": {
    "lint-openapi": "src/cli-validator/index.js"
  }
}
