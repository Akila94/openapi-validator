{
  "root": true,

  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "plugins": [
    "react"
  ],

  "rules": {
    "semi": [2, "never"],
    "strict": 0,
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "no-unused-vars": 2,
    "no-multi-spaces": 1,
    "camelcase": 1,
    "no-use-before-define": [2,"nofunc"],
    "no-underscore-dangle": 0,
    "no-unused-expressions": 1,
    "comma-dangle": 0,
    "react/jsx-no-bind": 1,
    "react/display-name": 0,
    "no-useless-escape": 0,
    "no-console": 0
  }
}
